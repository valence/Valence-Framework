SUBDIRS = cpp
EXTRA_CLEAN = Makefile

all: $(SUBDIRS)
	@for i in $(SUBDIRS); do $(MAKE) -C $$i; done

clean:
	@for i in $(SUBDIRS); do $(MAKE) clean -C $$i; done

test: all
	@for i in $(SUBDIRS); do $(MAKE) test -C $$i; done

distclean: clean
	@rm -rfv $(EXTRA_CLEAN)
	@for i in $(SUBDIRS); do $(MAKE) distclean -C $$i; done
